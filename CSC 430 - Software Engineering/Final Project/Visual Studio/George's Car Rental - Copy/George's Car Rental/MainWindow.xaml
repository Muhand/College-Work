<Window x:Class="George_s_Car_Rental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:George_s_Car_Rental"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="mainGrid" Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>


        <Grid Name="controlsGrid" Grid.Column="1" VerticalAlignment="Center">
            <StackPanel>
                <Label Content="Enter ZIPCODE" HorizontalAlignment="Center" FontSize="30" FontFamily="TimesNewRoman" FontWeight="Heavy"/>
                <TextBox Name="searchZipTextBox" FontSize="30" FontFamily="TimesNewRoman" TextChanged="SearchZipTextBox_OnTextChanged"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
