                <Button Grid.Row="2" Name="AddToCart" Content="Add to cart" FontSize="30" Click="AddToCart_Click" DataContext="{Binding Path=Gadget, ElementName=GadgetListBoxItem}" Margin="0,0,10,10"/>
            </Grid>-->

        </StackPanel>
    </Grid>
</UserControl>
